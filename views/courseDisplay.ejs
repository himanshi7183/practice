<br></br>
<h1 class="text-center mb-5">Course Display</h1>

<div class="container">
    <table class="table table-bodered table-hover mt-2">
        <tr class="table-light">
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Course</th>
            <th>City</th>
            <th>Status</th>
            <th>Comment</th>
            <th>Action</th>  
      </tr>
       <% d.forEach((c)=>{ %>
        <tr>
          <td><%= c._id %></td>
          <td><%= c.name %></td>
          <td><%= c.email %></td>
          <td><%= c.course %></td>
          <td><%= c.city %></td>
          <td><%= c.status %></td>
          <td><%= c.comment %></td>
    
          <td>
            <a href="/courseview/<%= c._id %>" class="btn btn-info">view</a>
            <a href="/courseedit/<%= c._id %>" class="btn btn-success">edit</a>
            <a href="/coursedelete/<%= c._id %>" class="btn btn-danger hidden">delete</a>
           </td>
        </tr>
      <% }) %>

    </table>
    <br><br>
    <% if(msg.length>0) {  %>
      <div class="alert alert-success">
       <%= msg %>
      </div>
  <% }  %>

</div> 
